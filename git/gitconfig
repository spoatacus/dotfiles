[core]
	autocrlf = input
	safecrlf = true
	# Use custom `.gitignore` and `.gitattributes`
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[alias]
	hist = log --pretty=format:\"%h %ad | %s%d\" --graph --date=short
	go = checkout -B

[color]
	ui = auto

[color "status"]
	changed = yellow
	untracked = orange

[log]
	abbrevCommit
